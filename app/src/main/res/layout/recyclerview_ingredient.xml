<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/recyclerview_ingredient_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/recyclerview_recipe_height"
        android:gravity="center"
        tools:text="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/recyclerview_recipe_height"
        android:layout_toRightOf="@id/recyclerview_baking_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="2" />

        <TextView
            android:id="@+id/recyclerview_ingredient_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="CUP" />

        <TextView
            android:id="@+id/recyclerview_ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            tools:text="Graham Cracker crumbs" />

    </LinearLayout>

</LinearLayout>