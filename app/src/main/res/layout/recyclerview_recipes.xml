<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recyclerview_recipe_height"
    android:layout_marginLeft="@dimen/recyclerview_recipe_margin"
    android:layout_marginRight="@dimen/recyclerview_recipe_margin">

    <TextView
        android:id="@+id/recyclerview_recipes_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:text="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/recyclerview_recipe_height"
        android:layout_toRightOf="@id/recyclerview_recipes_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_recipes_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            tools:text="Pisco Sour" />

        <TextView
            android:id="@+id/recyclerview_recipes_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            tools:text="4" />
    </LinearLayout>


    <ImageView
        android:id="@+id/recyclerview_recipes_image"
        android:layout_width="@dimen/recipe_image_size"
        android:layout_height="@dimen/recipe_image_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/image_pisco_sour" />
</RelativeLayout>